<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Info"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/firstName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_info"
        android:textColor="@color/colorBlack"
        android:text="First Name :"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/first_name_field_editText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/firstName"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />
    <TextView
        android:id="@+id/last_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstName"
        android:textColor="@color/colorBlack"
        android:text="Last Name :"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/LastNameEditText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/last_name"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name"
        android:textColor="@color/colorBlack"
        android:text="Phone:"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/phoneFieldEditText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/phone"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:textColor="@color/colorBlack"
        android:text="Address:"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/addressEditText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/address"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:textColor="@color/colorBlack"
        android:text="Email:"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/emailEditText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/email"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />


    <TextView
        android:id="@+id/password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:textColor="@color/colorBlack"
        android:text="Password:"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEditText"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/password"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />



    <TextView
        android:id="@+id/profile_types"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a..."
        android:textColor="@color/colorBlack"
        android:layout_below="@id/password"
        android:textStyle="italic" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Pet Owner"
        android:layout_below="@id/profile_types"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/switch1"
        android:text="Pet Sitter"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch2"
        android:background="@color/colorWhite"
        android:text="I'm interested in Adoption"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/settings_save_button"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch3"
        android:text="Save Settings"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:onClick="goHome"
        />
</RelativeLayout>