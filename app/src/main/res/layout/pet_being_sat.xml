<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/pet_name_edit2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="NAME:"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/pet_name_field_edit1"
        android:layout_toEndOf="@+id/pet_name_edit2"
        android:layout_above="@id/animalLabel"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/goBack"
        android:layout_width="wrap_content"
        android:inputType="text"
        android:background="@color/colorWhite"
        android:layout_toRightOf="@+id/pet_name_edit2"
        android:layout_alignRight="@id/goBack" />

    <TextView
        android:id="@+id/animalLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pet_name_edit2"
        android:textColor="@color/colorBlack"
        android:text="Animal:"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/pet_type_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/pet_name_edit2"
        android:layout_toEndOf="@id/animalLabel"
        android:layout_toRightOf="@id/animalLabel"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/pet_qualities_edit2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My pet is..."
        android:textStyle="italic"
        android:layout_below="@id/animalLabel"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <Switch
        android:id="@+id/switch_energetic_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Energetic"
        android:layout_below="@id/pet_qualities_edit2"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Switch
        android:id="@+id/switch_noisy_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_energetic_edit2"
        android:text="Noisy"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <Switch
        android:id="@+id/switch_trained_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_noisy_edit2"
        android:text="Trained"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/other_pet_info2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other information..."
        android:textStyle="italic"
        android:layout_below="@id/switch_trained_edit2"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/other_animal_type_field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/other_pet_info2"
        />

    <Button
        android:id="@+id/goBack"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_animal_type_field2"
        android:text="Back"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:onClick="onGoBack"
        android:layout_margin="10dp"
        />



</RelativeLayout>