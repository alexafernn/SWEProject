<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Intro">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:id="@+id/status_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeting"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="This is a placeholder for any status messages relevant to the user"
        />

    <Button
        android:id="@+id/owner_main_button"
        android:layout_width="match_parent"
        android:layout_below="@id/status_messages"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="I need a Sitter"
        android:background="@color/colorPrimary"
        android:onClick="toOwnerProfile"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/sitter_main_button"
        android:layout_width="match_parent"
        android:layout_below="@id/owner_main_button"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="I want to Sit"
        android:background="@color/colorPrimary"
        android:onClick="toSitterProfile"
        android:layout_margin="10dp"
        />

</RelativeLayout>