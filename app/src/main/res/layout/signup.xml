<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/signupFirstName"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:id="@+id/signupLastName"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/signupFirstName"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:id="@+id/phoneNumber"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/signupLastName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/email"
        android:layout_below="@id/addressSignup"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/addressSignup"
        android:layout_below="@id/phoneNumber"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"  />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/passwordSignUp"
        android:layout_below="@id/email"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"  />

    <TextView
        android:id="@+id/profile_types_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a..."
        android:layout_below="@id/passwordSignUp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_types_signup"
        android:text="Pet Owner:"
        android:id="@+id/userTypePetOwner"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"  />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userTypePetOwner"
        android:text="Pet Sitter:"
        android:id="@+id/userTypeSitter"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"  />

    <Button
        android:id="@+id/paypal_link_button"
        android:layout_below="@id/userTypeSitter"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Add PayPal Information"
        android:onClick="payPalConnection"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:onClick="save"
        android:layout_below="@id/paypal_link_button"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/FirstNameEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/signupFirstName"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/LastNameEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/signupLastName"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/PhoneEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/phoneNumber"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/EmailEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/email"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/AddyEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/addressSignup"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/passwordSignUp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />
</RelativeLayout>