<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:paddingTop="30dp">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:text="Account Sign Up "
        android:id="@+id/loginText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorBlack"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:id="@+id/signupName"
        android:layout_marginTop="60dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupName"
        android:text="Phone Number:"
        android:id="@+id/phoneNumber"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/email"
        android:layout_below="@id/phoneNumber"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/addressSignup"
        android:layout_below="@id/email"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:id="@+id/usernameSignUp"
        android:layout_below="@id/addressSignup"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/passwordSignUp"
        android:layout_below="@id/usernameSignUp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/profile_types_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a..."
        android:layout_below="@id/passwordSignUp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"

        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_types_signup"
        android:text="Pet Owner:"
        android:id="@+id/userTypePetOwner"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:paddingLeft="10dp"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userTypePetOwner"
        android:text="Pet Sitter:"
        android:id="@+id/userTypeSitter"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/paypal_link_button"
        android:layout_below="@id/userTypeSitter"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:text="Add PayPal Information"
        android:onClick="payPalConnection"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/saveButton"
        style = "@style/ButtonStyle"
        android:text="Save"
        android:onClick="save"
        android:layout_marginTop="450dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/NameEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/signupName"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/PhoneEditText"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/phoneNumber"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/EmailEditText"
        android:ems="15"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/email"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/AddyEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/addressSignup"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/UserNameEditText"
        android:ems="12"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/usernameSignUp"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:ems="13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/passwordSignUp"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>